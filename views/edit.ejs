<%- include("partials/header") %>


    <div class="ui container" style="margin-top: 5rem; border: 0.5px solid black; padding: 20px;">
        <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" placeholder="Image" value="<%= blog.image %>">
            </div>
            <div class="field">
                <label>Description</label>
                <textarea name="blog[body]" placeholder="Body" cols="30" rows="10"> <%= blog.body %> </textarea>
            </div>
            <button class="ui button" type="submit">Update</button>
        </form>
    </div>

    <%- include("partials/footer") %>